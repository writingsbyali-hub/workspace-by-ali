---
import { footerNavigation } from '../../lib/navigation';

interface Props {
  workspaceName?: string;
  tagline?: string;
  socialLinks?: Array<{
    platform: 'github' | 'twitter' | 'linkedin' | 'email';
    url: string;
  }>;
}

const {
  workspaceName = 'Workspace',
  tagline = 'A self-hosted research platform for transparent, collaborative science.',
  socialLinks = [],
} = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer class="public-footer">
  <div class="footer-container">
    <!-- Column 1: Branding -->
    <div class="footer-section footer-branding">
      <h3 class="footer-heading">{workspaceName}</h3>
      <p class="footer-description">{tagline}</p>

      <!-- Social Links -->
      {socialLinks.length > 0 && (
        <div class="social-links">
          {socialLinks.map((link) => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="social-link"
              aria-label={link.platform}
            >
              {link.platform === 'github' && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="social-icon">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              )}
              {link.platform === 'twitter' && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="social-icon">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              )}
              {link.platform === 'linkedin' && (
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="social-icon">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              {link.platform === 'email' && (
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="social-icon">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                </svg>
              )}
            </a>
          ))}
        </div>
      )}
    </div>

    <!-- Column 2: Quick Links -->
    <div class="footer-section">
      <h4 class="footer-subheading">Quick Links</h4>
      <ul class="footer-links">
        {footerNavigation.quickLinks.map((link) => (
          <li>
            <a href={link.path} class="footer-link">
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>

    <!-- Column 3: For Researchers -->
    <div class="footer-section">
      <h4 class="footer-subheading">For Researchers</h4>
      <ul class="footer-links">
        {footerNavigation.forResearchers.map((link) => (
          <li>
            <a
              href={link.path}
              class="footer-link"
              target={link.external ? '_blank' : undefined}
              rel={link.external ? 'noopener noreferrer' : undefined}
            >
              {link.label}
              {link.external && (
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="external-icon">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                </svg>
              )}
            </a>
          </li>
        ))}
      </ul>
    </div>

    <!-- Column 4: Meta -->
    <div class="footer-section footer-meta">
      <p class="footer-copyright">
        Â© {currentYear} {workspaceName}
      </p>
      <p class="footer-powered">
        Powered by <a href="https://github.com/yourusername/workspace" target="_blank" rel="noopener noreferrer" class="powered-link">Workspace</a>
      </p>
    </div>
  </div>
</footer>

<style>
  .public-footer {
    background: var(--bg-secondary);
    border-top: 1px solid var(--border-color);
    margin-top: 4rem;
  }

  .footer-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 3rem 2rem 2rem;
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 2rem;
  }

  /* Branding Section */
  .footer-branding {
    padding-right: 2rem;
  }

  .footer-heading {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }

  .footer-description {
    color: var(--text-muted);
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-size: 0.9375rem;
  }

  /* Social Links */
  .social-links {
    display: flex;
    gap: 0.75rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background: var(--bg-hover);
    color: var(--text-muted);
    transition: all 0.2s;
    text-decoration: none;
  }

  .social-link:hover {
    background: var(--primary);
    color: white;
    transform: translateY(-2px);
  }

  .social-icon {
    width: 1.125rem;
    height: 1.125rem;
  }

  /* Footer Sections */
  .footer-section {
    display: flex;
    flex-direction: column;
  }

  .footer-subheading {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
  }

  .footer-link {
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color 0.2s;
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
  }

  .footer-link:hover {
    color: var(--primary);
  }

  .external-icon {
    width: 0.875rem;
    height: 0.875rem;
  }

  /* Meta Section */
  .footer-meta {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-copyright,
  .footer-powered {
    font-size: 0.875rem;
    color: var(--text-muted);
    line-height: 1.5;
  }

  .powered-link {
    color: var(--primary);
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.2s;
  }

  .powered-link:hover {
    opacity: 0.8;
    text-decoration: underline;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .footer-container {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }

    .footer-branding {
      grid-column: 1 / -1;
      padding-right: 0;
    }
  }

  @media (max-width: 768px) {
    .footer-container {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 2rem 1rem 1.5rem;
    }

    .footer-branding {
      grid-column: auto;
    }

    .footer-description {
      font-size: 0.875rem;
    }
  }
</style>
